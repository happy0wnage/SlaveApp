<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:weightSum="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take a photo"
            android:id="@+id/takePhotoButton"
            android:textSize="@dimen/normal_text"
            android:background="#d2ff7f"
            android:layout_column="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:id="@+id/logoutButton" android:layout_gravity="center_horizontal"
            android:textSize="@dimen/normal_text"
            android:background="#c26c6c"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="#e8e8e8"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Download file"
            android:id="@+id/downloadFileButton"
            android:textSize="@dimen/normal_text"
            android:layout_gravity="center_horizontal"
            android:background="#a5ff7f"
            android:layout_column="0"
            android:clickable="true" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/downloadFilePath"
            android:layout_marginLeft="5dp"
            android:focusable="true"
            android:hint="path"
            android:layout_gravity="bottom" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="#e8e8e8"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Upload File"
            android:id="@+id/uploadFileButton"
            android:textSize="@dimen/normal_text"
            android:layout_gravity="center_horizontal"
            android:background="#a5ff7f"
            android:layout_column="0"
            android:clickable="true" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/uploadFolderText"
            android:layout_marginLeft="5dp"
            android:focusable="true"
            android:hint="folder name"
            android:layout_gravity="bottom" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="#e8e8e8"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cloud files"
            android:id="@+id/browseUploadedButton"
            android:textSize="@dimen/normal_text"
            android:background="#a4feef"
            android:clickable="true" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/browseFolderText"
            android:layout_marginLeft="5dp"
            android:focusable="true"
            android:hint="folder name"
            android:inputType="text"
            android:layout_gravity="bottom" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#e8e8e8"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Share to user"
                android:id="@+id/shareToUserButton"
                android:layout_gravity="center_horizontal"
                android:background="#adadad"
                android:clickable="true" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/shareFilePath"
                android:layout_gravity="bottom|center_horizontal"
                android:focusable="true"
                android:hint="share path"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shareUserEmail"
            android:hint="user email" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="#e8e8e8"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Delete folder from server"
            android:id="@+id/deleteServerFolder"
            android:layout_gravity="center_horizontal"
            android:background="#adadad"
            android:clickable="true" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/deleteFolderText"
            android:layout_gravity="bottom|center_horizontal"
            android:focusable="true"
            android:hint="folder name"
            android:layout_marginLeft="5dp"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#e8e8e8"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/fileManegerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Browse sdcard files"
            android:longClickable="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" >

            <EditText
                android:layout_alignParentLeft="true"
                android:id="@+id/filePath"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_toLeftOf="@+id/fileManegerText"
                android:layout_gravity="bottom"
                android:layout_marginRight="5dp" />

            <Button
                android:text="Browser"
                android:id="@+id/fileManegerText"
                android:textSize="18dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:onClick="getFile"
                android:background="#adadad" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>